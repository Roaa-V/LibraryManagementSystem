<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryManagementSystem.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #e6f0fa; /* light baby-blue background */
        }

        .navbar {
            background-color: #5b9bd5 !important; /* baby blue */
        }

        /* Main navbar links (Home, Student, Admin when not logged in) */
        .navbar .nav-link {
            color: #ffffff !important;
            font-weight: 500;
        }

        .navbar .nav-link:hover {
            color: #ffd966 !important;
        }

        /* Logged-in student/admin menu items */
        .navbar .logged-in-nav {
            display: flex;
            gap: 0.5rem;
        }

        .navbar .logged-in-nav .nav-link {
            color: #003566 !important; /* dark navy */
            font-weight: 500;
        }

        .navbar .logged-in-nav .nav-link:hover {
            color: #ffb703 !important; /* warm yellow hover */
        }

        .card-header {
            background-color: #5b9bd5 !important;
            color: white;
        }

        .btn-success {
            background-color: #5b9bd5;
            border-color: #003566;
        }

        /* Highlight active page */
        .navbar .nav-item .active {
            font-weight: bold;
            color: #023e8a !important;
            text-decoration: underline;
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LibraryManagementSystem</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>

                    @* Student logged in *@
                    @if (Context.Session.GetInt32("StudentId") != null)
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Student" asp-action="BookSearch">Book Search</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Student" asp-action="BorrowedBooks">Borrowed Books</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Student" asp-action="RoomReservation">Room Reservation</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Student" asp-action="Feedback">Feedback</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Student" asp-action="Profile">Profile</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Student" asp-action="Logout">Logout</a></li>
                    }
                    @* Admin logged in *@
                    else if (Context.Session.GetInt32("AdminId") != null)
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="ManageBooks">Manage Books</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="BorrowRequests">Borrow Requests</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="ManageRooms">Manage Rooms</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="RoomRequests">Room Requests</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="ReviewFeedback">Review Feedback</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="ExportReports">Export Reports</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Logout">Logout</a></li>
                        }
                        @* Not logged in *@
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Student" asp-action="Login">Student</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - LibraryManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>