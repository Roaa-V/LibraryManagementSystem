@model LibraryManagementSystem.Models.Book

@{
    Layout = "_Layout";
}

<h2>Delete Book</h2>

<h4>Are you sure you want to delete this book?</h4>

<div class="mb-3">
    <strong>Title:</strong> @Model.Title <br />
    <strong>Author:</strong> @Model.Author
</div>

<form asp-action="DeleteBook" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="ManageBooks" class="btn btn-secondary">Cancel</a>
</form>
